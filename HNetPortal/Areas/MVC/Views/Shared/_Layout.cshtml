<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
	<title>@ViewBag.Title</title>
	@Html.Partial("~/MasterPages/Head.ascx")
	@RenderSection("head", false)

	<!-- Page-specific Scripts, if any, inserted here -->
	@RenderSection("HeadExtras", false)
</head>

<body>
	<div class="container wrapper">

		@Html.Partial("~/Areas/MVC/Views/Shared/HeaderWrapper.ascx")
		<div class="container body-content" style="margin-top: 70px">
			@RenderBody()
		</div>

	</div>

	@Html.Partial("~/MasterPages/Footer.ascx")
	@RenderSection("footer", false)

	<script lang="javascript">
		//Intercept WinForms postback, and handle the logout event from
		//the nav bar if it was clicked.  Otherwise cancel the postback.
		function __doPostBack(eventTarget, eventArgument) {
			if (eventTarget == '1$ctl01$LoginView$HeadLoginStatus$ctl00') {
				console.log("intercepted winforms __doPostBack() (Logout) event arg=" + eventTarget);
				window.location.href = '/Login.Aspx?deauth=true';
			}
			return false;
		}
	</script>

	<!-- Page-specific page bottom stuff, if any, inserted here -->
	@RenderSection("FootExtras", false)

</body>

</html>
